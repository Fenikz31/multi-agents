{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ProjectConfig",
  "type": "object",
  "properties": {
    "agents": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/AgentConfig"
      }
    },
    "groups": {
      "type": "array",
      "default": [],
      "items": {
        "$ref": "#/$defs/GroupConfig"
      }
    },
    "project": {
      "type": "string"
    },
    "schema_version": {
      "type": "integer",
      "format": "uint32",
      "minimum": 0
    }
  },
  "additionalProperties": false,
  "required": [
    "schema_version",
    "project",
    "agents"
  ],
  "$defs": {
    "AgentConfig": {
      "type": "object",
      "properties": {
        "allowed_tools": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "model": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "provider": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "system_prompt": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "role",
        "provider",
        "model",
        "allowed_tools",
        "system_prompt"
      ]
    },
    "GroupConfig": {
      "type": "object",
      "properties": {
        "members": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "members"
      ]
    }
  }
}