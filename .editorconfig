# EditorConfig helps maintain consistent coding styles between different editors and IDEs
# See: https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Rust
[*.rs]
indent_style = space
indent_size = 4

# TOML
[*.toml]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# SQL
[*.sql]
indent_size = 2

# Markdown: keep trailing spaces for intentional line breaks
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Makefile uses tabs
[Makefile]
indent_style = tab

# This file
[.editorconfig]
indent_size = 2
